" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" " On pressing tab, insert 4 spaces
set expandtab
"filetype plugin indent on
syntax enable
set background=dark
colorscheme solarized

" Tab completion menus
set wildmenu
set wildmode=longest,list

set list
set listchars=tab:>-
